<layout>

    <data>

        <variable
            name="busData"
            type="com.myproject.campusmap_cleanarchitecture.domain.model.BusPosition" />

    </data>

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@{`노선번호 : ` + busData.brtId}"
            tools:text="brtId" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@{`방면명 : ` + busData.brtVianame}"
            tools:text="brtVianame" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@{`남은 정류장 수 : ` + busData.RStop}"
            tools:text="Rstop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@{`도착예정시간 : ` + busData.RTime}"
            tools:text="Rtime" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@{`최근통과지점 : ` + busData.viaStopname}"
            tools:text="viaStopName" />


    </LinearLayout>


</layout>