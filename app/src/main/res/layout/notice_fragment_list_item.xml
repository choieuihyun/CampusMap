<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>
        <variable
            name="notice"
            type="com.myproject.campusmap_cleanarchitecture.domain.model.NoticeItem" />
    </data>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_marginTop="6dp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/notice_info"
            tools:layout_editor_absoluteX="0dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/notice_number"
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="186dp"
                android:gravity="center"
                android:text="@{notice.number}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.088"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/notice_title"
                android:layout_width="165dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="@{notice.title}"
                app:layout_constraintEnd_toStartOf="@+id/notice_place"
                app:layout_constraintStart_toEndOf="@+id/notice_number"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/notice_info"
                android:layout_width="165dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@{notice.info}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/notice_place"
                app:layout_constraintStart_toEndOf="@+id/notice_number"
                app:layout_constraintTop_toBottomOf="@+id/notice_title" />

            <TextView
                android:id="@+id/notice_place"
                android:layout_width="100dp"
                android:layout_height="85dp"
                android:layout_marginStart="186dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:gravity="center"
                android:text="@{notice.link}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.936"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.063" />

            <!--    building_menu_list RecyclerView 항목들-->





        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>

</layout>
