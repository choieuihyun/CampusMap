<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="detailFragment"
            type="com.campusmap.android.campusmap_with_kakao.BuildingDetailFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/building_image"
                android:layout_width="match_parent"
                android:layout_height="294dp"
                android:scaleType="fitXY"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/building_name"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="27dp"
            android:textSize="18dp"
            tools:text="건물 이름"
            android:gravity="center_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <TextView
            android:id="@+id/building_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            tools:text="건물 주소"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <TextView
            android:id="@+id/building_copyMachine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            tools:text="건물 복사기"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <TextView
            android:id="@+id/building_elevator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            tools:text="건물 엘리베이터"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <Button
            android:id="@+id/lectureRoom_button"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="29dp"
            tools:text="강의실 찾기" />



    </LinearLayout>
</layout>