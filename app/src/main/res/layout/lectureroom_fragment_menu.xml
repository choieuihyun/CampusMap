<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="lectureRoomMenu"
            type="com.myproject.campusmap_cleanarchitecture.domain.model.Building" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/lectureroom_title_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_info_menu_title"
        android:elevation="20dp"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="@{lectureRoomMenu.name}"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="건물 정보보기" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/lectureRoom_RecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lectureroom_title_id">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lectureRoomMenu_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/radius_info_menu_button"
                android:stateListAnimator="@null"
                android:text="1층" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lectureRoomMenu_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/radius_info_menu_button"
                android:stateListAnimator="@null"
                android:text="2층" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lectureRoomMenu_btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/radius_info_menu_button"
                android:stateListAnimator="@null"
                android:text="3층" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lectureRoomMenu_btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/radius_info_menu_button"
                android:stateListAnimator="@null"
                android:text="4층" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lectureRoomMenu_btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/radius_info_menu_button"
                android:stateListAnimator="@null"
                android:text="5층" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lectureRoomMenu_btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/radius_info_menu_button"
                android:stateListAnimator="@null"
                android:text="6층" />

        </LinearLayout>
    </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lectureRoom_RecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="10dp"
            android:backgroundTint="@color/material_dynamic_neutral70"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
            android:orientation="vertical">
        </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>